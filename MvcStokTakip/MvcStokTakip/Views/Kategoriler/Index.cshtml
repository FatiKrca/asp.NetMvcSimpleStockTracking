@using MvcStokTakip.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLKATEGORILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@if (ViewBag.Mesaj != null)
{
    <div id="alertDiv">
        @if (ViewBag.MesajSilSuccess != null)
        {
            <div class="alert alert-success">
                <h3>
                    Başarıyla Silindi...
                </h3>
            </div>
        }
        else if (ViewBag.MesajSilFail != null)
        {
            <div class="alert alert-danger">
                <h3>
                    Bir Problemle Karşılaşıldı. Bu Kategori Kullanılıyor...
                </h3>
            </div>
        }
        else if (ViewBag.KategoriEklemeBaşarılı != null)
        {
            <div class="alert alert-success">
                <h3>
                    Kategori Ekleme Başarılı...
                </h3>
            </div>
        }
        else if (ViewBag.KategoriGuncellendi != null)
        {
            <div class="alert alert-success">
                <h3>
                    Kategori Güncelleme Başarılı...
                </h3>
            </div>
        }

    </div>
}


<div style="text-align:center">
    <h2> KATEGORİLER</h2>
</div>
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Kategori Id</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.KATEGORIID</th>
                <td>@item.KATEGORIAD</td>
                @*<td><a href="/Kategoriler/SIL/@item.KATEGORIID" class="btn btn-danger">Sil</a> </td>*@
                <td>@Html.ActionLink("Sil", "SIL", new { id = item.KATEGORIID }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten Silmek İstiyor musun?')" })</td>

                <td><a href="/Kategoriler/KategoriGetir/@item.KATEGORIID" class="btn btn-success">Güncelle</a> </td>
            </tr>
        }
    </tbody>
</table>
<div style="text-align:right; ">
    @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

</div>

<a style="margin-top: -110px" href="/Kategoriler/YeniKategori/" class="btn btn-primary">Yeni Kategori Ekle</a>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        $('#tbl1').DataTable({
            searching: true, // Enable search feature
            paging: false,    // Disable pagination
            info: true,      // Disable information display
            ordering: false   // Disable column sorting
        });
    });
</script>
<script>
    $(".alerDiv").ready(function () {


        // Hide the alert after 4 seconds
        setTimeout(function () {
            $('#alertDiv').fadeOut('slow');
        }, 4000);
    });

</script>

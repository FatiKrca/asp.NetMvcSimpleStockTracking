@model MvcStokTakip.Models.Entity.TBLMUSTERILER

@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@if (ViewBag.MusteriVar != null)
{
    <div id="alertDiv" class="alert alert-danger">
        <h3>
            Müşteri Zaten Var...
        </h3>
    </div>
}
<div style="text-align:center">
    <h2>Müşteri EKLE</h2>
</div>
<div class="container">
    <form class="form-group" method="post">

        @*<div>
                <label>Müşteri Adı</label>
                <input type="text" / class="form-control" name="MUSTERIAD">
            </div>
            <div style="margin-top:15px">
                <label>Müşteri Soyadı</label>
                <input type="text" / class="form-control" name="MUSTERISOYAD">
            </div>*@
        <div>
            <label>Müşteri Adı</label>
            @Html.TextBoxFor(x => x.MUSTERIAD, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.MUSTERIAD, "", new { @style = "color:red" })
        </div>
        <div>
            <label>Müşteri Soyadı</label>
            @Html.TextBoxFor(x => x.MUSTERISOYAD, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.MUSTERISOYAD, "", new { @style = "color:red" })
        </div>
        <div style="margin-top:15px">
            <button class="btn btn-info" id="btn1">Müşteri Ekle</button>

        </div>
    </form>

</div>
<script>
    $(document).ready(function () {
        // Hide the alert after 4 seconds
        setTimeout(function () {
            $('#alertDiv').fadeOut('slow');
        }, 4000);
    });
</script>